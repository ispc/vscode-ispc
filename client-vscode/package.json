{
    "name": "ispc",
    "description": "Intel® Implicit SPMD Program Compiler Language Extension",
    "author": "Pete Brubaker, Ethan Davis, Intel®",
    "license": "MIT",
    "version": "1.2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/ispc/ispc"
    },
    "icon": "images/ispc-icon.png",
    "publisher": "intel-corporation",
    "engines": {
        "vscode": "^1.82.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "main": "./out/src/extension",
    "extensionKind": [
        "workspace",
        "ui"
    ],
    "contributes": {
        "languages": [
            {
                "id": "ispc",
                "aliases": [
                    "Intel® Implicit SPMD Program Compiler",
                    "ISPC",
                    "ispc",
                    "simd"
                ],
                "extensions": [
                    ".ispc",
                    ".isph"
                ],
                "configuration": "./ispc-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ispc",
                "scopeName": "source.ispc",
                "path": "./ispc.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "ispc",
                "path": "./ispc-snippets.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "ISPC ",
            "properties": {
                "ispc.compilerTarget": {
                    "type": "string",
                    "enum": [
                        "sse",
                        "sse2-i32x4",
                        "sse2-i32x8",
                        "sse4.1-i8x16",
                        "sse4.1-i16x8",
                        "sse4.1-i32x4",
                        "sse4.1-i32x8",
                        "sse4.2-i8x16",
                        "sse4.2-i16x8",
                        "sse4.2-i32x4",
                        "sse4.2-i32x8",
                        "avx1-i32x4",
                        "avx1-i32x8",
                        "avx1-i32x16",
                        "avx1-i64x4",
                        "avx2-i8x32",
                        "avx2-i16x16",
                        "avx2-i32x4",
                        "avx2-i32x8",
                        "avx2-i32x16",
                        "avx2-i64x4",
                        "avx512knl-x16",
                        "avx512skx-x4",
                        "avx512skx-x8",
                        "avx512skx-x16",
                        "avx512skx-x32",
                        "avx512skx-x64",
                        "avx512spr-x4",
                        "avx512spr-x8",
                        "avx512spr-x16",
                        "avx512spr-x32",
                        "avx512spr-x64",
                        "neon-i8x16",
                        "neon-i16x8",
                        "neon-i32x4",
                        "neon-i32x8",
                        "gen9-x8",
                        "gen9-x16",
                        "xelp-x8",
                        "xelp-x16",
                        "xehpg-x8",
                        "xehpg-x16",
                        "xehpc-x16",
                        "xehpc-x32",
                        "xelpg-x8",
                        "xelpg-x16"
                    ],
                    "default": "host",
                    "description": "The target setting of the compiler used for edit time validation of source files (warnings/errors.)"
                },
                "ispc.compilerArchitecture": {
                    "type": "string",
                    "enum": [
                        "x86",
                        "x86-64",
                        "arm",
                        "aarch64",
                        "xe64"
                    ],
                    "default": "x86-64",
                    "description": "The architecture setting of the compiler used for edit time validation of source files (warnings/errors.)"
                },
                "ispc.compilerCPU": {
                    "type": "string",
                    "enum": [
                        "generic",
                        "x86-64",
                        "atom",
                        "bonnell",
                        "core2",
                        "penryn",
                        "corei7",
                        "nehalem",
                        "btver2",
                        "ps4",
                        "corei7-avx",
                        "sandybridge",
                        "core-avx-i",
                        "ivybridge",
                        "core-avx2",
                        "haswell",
                        "broadwell",
                        "skylake",
                        "knl",
                        "skx",
                        "icelake-client",
                        "icl",
                        "slm",
                        "silvermont",
                        "icelake-server",
                        "icx",
                        "tigerlake",
                        "tgl",
                        "alderlake",
                        "adl",
                        "meteorlake",
                        "mtl",
                        "sapphirerapids",
                        "spr",
                        "znver1",
                        "znver2",
                        "ps5",
                        "znver3",
                        "cortex-a9",
                        "cortex-a15",
                        "cortex-a35",
                        "cortex-a53",
                        "cortex-a57",
                        "apple-a7",
                        "apple-a10",
                        "apple-a11",
                        "apple-a12",
                        "apple-a13",
                        "apple-a14",
                        "skl",
                        "tgllp",
                        "dg1",
                        "acm-g10",
                        "acm-g11",
                        "acm-g12",
                        "pvc",
                        "mtl-m",
                        "mtl-p"
                    ],
                    "default": "sapphirerapids",
                    "description": "The CPU setting of the compiler used for edit time validation of source files (warnings/errors.)"
                },
                "ispc.compilerTargetOS": {
                    "type": "string",
                    "enum": [
                        "windows",
                        "linux",
                        "custom_linux",
                        "freebsd",
                        "macos",
                        "android",
                        "ps4"
                    ],
                    "default": "windows",
                    "description": "The target-os (Operating System) setting of the compiler used for edit time validation of source files (warnings/errors.)"
                },
                "ispc.compilerPath": {
                    "type": "string",
                    "default": "ispc",
                    "description": "The fully qualified path to the compiler used for edit time validation of source files (warnings/errors.)"
                },
                "ispc.maxNumberOfProblems": {
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems returned by the server."
                },
                "ispc.trace.server": {
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "verbose",
                    "description": "Traces the communication between VSCode and the ISPC language server."
                }
            }
        },
        "configurationDefaults": {
            "[ispc]": {
                "editor.autoClosingBrackets": "always",
                "editor.autoClosingQuotes": "always",
                "editor.autoSurround": "brackets"
            }
        },
        "breakpoints": [
            {
                "language": "ispc"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/node": "^24",
        "@types/vscode": "^1.82.0",
        "@vscode/vsce": "^3.6.0",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    }
}
